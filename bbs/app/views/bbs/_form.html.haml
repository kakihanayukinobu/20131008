= form_for @bb do |f|
  - if @bb.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bb.errors.count, "error")} prohibited this bb from being saved:"
      %ul
        - @bb.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :contents
    = f.text_area :contents
  .actions
    = f.submit 'Save'
